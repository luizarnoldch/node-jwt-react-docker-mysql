{
	"compilerOptions": {
		"types": ["node", "@prisma/client"],
		"module": "NodeNext",
		"moduleResolution": "node",
		"target": "ES2020",
		"sourceMap": true,
		"noEmit": false,
		"declaration": true,
		"emitDeclarationOnly": true,
		"esModuleInterop": true,
    	"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"outDir": "dist"
	},
	"include": ["src/**/*.ts"],
  	"exclude": ["node_modules"]
}
